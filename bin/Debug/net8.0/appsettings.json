{
  "ApplicationSettings": 
  {
    "IPAddress": "Any",
    "Port": 5000,
    "BufferSize": 1024,
    "ConnectionTimeout": 30
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/mudserver.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
    